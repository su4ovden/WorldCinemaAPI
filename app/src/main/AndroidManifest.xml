<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cinemaapi">

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demoex">
        <activity
            android:name="com.example.cinemaapi.TheMagiciancActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cinemaapi.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cinemaapi.CollectionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cinemaapi.PodborkaActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cinemaapi.RegActivity"
            android:exported="true" />
        <activity
            android:name="com.example.cinemaapi.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.cinemaapi.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.cinemaapi.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>